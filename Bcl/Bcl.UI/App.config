<?xml version="1.0" encoding="utf-8" ?>

<configuration>
  <configSections>
    <section name="bclConfigSection" type="Bcl.Core.ConfigEntities.BclConfigSection, Bcl.Core" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
  <bclConfigSection>
    <sourceFolders>
      <folder path="D:\" />
    </sourceFolders>
    <defaultDestinationFolder path="D:\default" />
    <rules>
      <rule regex=".*@.*\..*" moveto="D:\tmp" />
    </rules>
    <cultureInfo value="en-US" />
    <isVerbose value="true" />
    <mustAddNumber value="false" />
    <mustAddDate value="false" />
  </bclConfigSection>
</configuration>